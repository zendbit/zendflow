{
  "appInfo": {
    "appName": "",
    "appType": "desktop-webview",
    "appDesc": "create desktop webview using zfcore as server and https://github.com/zserge/webview as webkit engine."
  },
  "nimble": [
    "install zip",
    "develop https://github.com/zendbit/nim.uri3",
    "develop https://github.com/zendbit/nim.zfblast",
    "develop https://github.com/zendbit/nim.zfcore",
    "develop https://github.com/zendbit/nim.zfplugs",
    "develop https://github.com/zendbit/nim.stdext",
    "install karax",
    "install https://github.com/oskca/webview"
  ],
  "initVar": {
    "appDir": "{appsDir}::{appName}",
    "srcDir": "{appDir}::src",
    "srcServerDir": "{appDir}::src::server",
    "srcSpaDir": "{appDir}::src::spa",
    "srcWebviewDir": "{appDir}::src::webview",
    "wwwDir": "{appDir}::www",
    "compiledJsDir": "{wwwDir}::private::js::compiled"
  },
  "init": [
    {
      "action": "copyDir",
      "list": [
        {
          "src": "{templatesDir}::{appType}",
          "dest": "{appDir}"
        }
      ]
    },
    {
      "action": "copyFile",
      "list": [
        {
          "src": "nakefile.nim",
          "dest": "{appDir}::nakefile.nim"
        }
      ]
    },
    {
      "action": "moveFile",
      "list": [
        {
          "src": "{srcDir}::app.nim",
          "dest": "{srcDir}::{appName}.nim"
        }
      ]
    },
    {
      "action": "createDir",
      "list": [
        {"name": "{compiledJsDir}"}
      ]
    },
    {
      "action": "cmd",
      "exe": "karun",
      "props": {
        "src": "{srcSpaDir}::app.nim"
      },
      "options": "{src}"
    },
    {
      "action": "moveFile",
      "list": [
        {
          "src": "app.html",
          "dest": "{wwwDir}::index.html"
        },
        {
          "src": "app.js",
          "dest": "{compiledJsDir}::app.js"
        }
      ]
    },
    {
      "action": "replaceStr",
      "file": "{wwwDir}::index.html",
      "list": [
        {
          "old": "app.js",
          "new": "/private/js/compiled/app.js"
        }
      ]
    },
    {
      "action": "replaceStr",
      "file": "{srcDir}::run.nim",
      "list": [
        {
          "old": "appName",
          "new": "{appName}"
        }
      ]
    }
  ],
  "debug": {
    "desc": "debug the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{currentAppDir}::src::{appName}.nim",
          "out": "{currentAppDir}::bin::debug"
        },
        "options": "c -d:nimDebugDlOpen -d:ssl --threads:on --outdir:{out} {src}",
        "next": [
          {
            "action": "cmd",
            "exe" : "nim",
            "props": {
              "src": "{currentAppDir}::src::spa::app.nim",
              "out": "{currentAppDir}::www::private::js::compiled"
            },
            "options": "js --outdir:{out} {src}",
            "next": [
              {
                "action": "removeDir",
                "list": [
                  {"name": "{currentAppDir}::bin::debug::www"}
                ]
              },
              {
                "action": "copyDir",
                "list": [
                  {
                    "src": "{currentAppDir}::www",
                    "dest": "{currentAppDir}::bin::debug::www"
                  }
                ]
              },
              {
                "action": "copyFile",
                "list": [
                  {
                    "src": "{currentAppDir}::settings.json",
                    "dest": "{currentAppDir}::bin::debug::settings.json"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "debug-run": {
    "desc": "debug the app then run it.",
    "tasks": [
        {
          "action": "cmd",
          "exe": "nake",
          "options": "debug {appName}",
          "next": [
            {
              "action": "cmd",
              "exe": "{currentAppDir}::bin::debug::{appName}"
            }
          ]
        }
    ]
  },
  "release": {
    "desc": "release the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{currentAppDir}::src::{appName}.nim",
          "out": "{currentAppDir}::bin::release"
        },
        "options": "c -d:nimDebugDlOpen -d:ssl --threads:on -d:release --outdir:{out} {src}",
        "next": [
          {
            "action": "cmd",
            "exe" : "nim",
            "props": {
              "src": "{currentAppDir}::src::spa::app.nim",
              "out": "{currentAppDir}::www::private::js::compiled"
            },
            "options": "js --outdir:{out} {src}",
            "next": [
              {
                "action": "removeDir",
                "list": [
                  {"name": "{currentAppDir}::bin::release::www"}
                ]
              },
              {
                "action": "copyDir",
                "list": [
                  {
                    "src": "{currentAppDir}::www",
                    "dest": "{currentAppDir}::bin::release::www"
                  }
                ]
              },
              {
                "action": "copyFile",
                "list": [
                  {
                    "src": "{currentAppDir}::settings.json",
                    "dest": "{currentAppDir}::bin::release::settings.json"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "release-run": {
    "desc": "release the app then run it.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "release {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{currentAppDir}::bin::release::{appName}"
          }
        ]
      }
    ]
  },
  "clean-release-run": {
    "desc": "clean release then run the app.",
    "tasks": [
      {
        "action": "removeDir",
        "list":[
          {
            "name": "{currentAppDir}::bin::release",
            "next": [
              {
                "action": "cmd",
                "exe": "nake",
                "options": "release-run {appName}"
              }
            ]
          }
        ]
      }
    ]
  },
  "clean-debug-run": {
    "desc": "clean debug then run the app.",
    "tasks": [
      {
        "action": "removeDir",
        "list":[
          {
            "name": "{currentAppDir}::bin::debug",
            "next": [
              {
                "action": "cmd",
                "exe": "nake",
                "options": "debug-run {appName}"
              }
            ]
          }
        ]
      }
    ]
  },
  "clean-all": {
    "desc": "clean bin dir.",
    "tasks": [
      {
        "action": "removeDir",
        "list": [
          {"name": "{currentAppDir}::bin"}
        ]
      }
    ]
  }
}
