{
  "appInfo": {
    "appName": "",
    "appType": "web",
    "appDesc": "create web app with zfcore.",
    "appId": "",
    "appVersion": "0.0.1"
  },
  "nimble": [
    "develop uri3",
    "develop stdext",
    "develop zfdbms",
    "develop zfblast",
    "develop zfcore",
    "develop zfplugs",
    "install mustache@#head",
    "install karax@#head"
  ],
  "initVar": {
    "appDir": "{appsDir}::{appName}",
    "srcDir": "{appDir}::src",
    "wwwDir": "{appDir}::www",
    "compiledJsDir": "{wwwDir}::private::js"
  },
  "init": [
    {
      "action": "copyDir",
      "list": [
        {
          "src": "{templatesDir}::{appType}",
          "dest": "{appDir}",
          "next":[
            {
              "action": "createDir",
              "list": [
                {"name": "{compiledJsDir}"}
              ]
            }
          ]
        }
      ]
    },
    {
      "action": "copyFile",
      "list": [
        {
          "src": "nakefile.nim",
          "dest": "{appDir}::nakefile.nim"
        }
      ]
    }
  ],
  "var": {
    "srcDir": "{currentAppDir}::src",
    "srcFrontendDir": "{srcDir}::frontend",
    "srcBackendDir": "{srcDir}::backend",
    "srcTemplateDir": "{srcDir}::template",
    "wwwDir": "{currentAppDir}::www",
    "binDir": "{currentAppDir}::bin",
    "debugBinDir": "{binDir}::debug",
    "releaseBinDir": "{binDir}::release",
    "debugWwwDir": "{binDir}::debug::www",
    "releaseWwwDir": "{binDir}::release::www",
    "nimbledepsDir": "{currentAppDir}::packages::nimble::pkgs",
    "configDir": "{currentAppDir}::config"
  },
  "compile-debug-frontend": {
    "desc": "compile debug frontend app only.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{srcFrontendDir}::app.nim",
          "out": "{wwwDir}::private::js::debug-{appName}-{appVersion}-{appId}.js"
        },
        "options": "js --nimblePath:{nimbledepsDir} --out:{out} {src}"
      }
    ]
  },
  "compile-release-frontend": {
    "desc": "compile release frontend app only.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{srcFrontendDir}::app.nim",
          "out": "{wwwDir}::private::js::release-{appName}-{appVersion}-{appId}.js"
        },
        "options": "js --nimblePath:{nimbledepsDir} -d:release --out:{out} {src}"
      }
    ]
  },
  "compile-release-backend": {
    "desc": "compile release backend app only",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{srcBackendDir}::app.nim",
          "out": "{releaseBinDir}::release-{appName}-{appVersion}-{appId}"
        },
        "options": "c -d:nimDebugDlOpen --nimblePath:{nimbledepsDir} -d:ssl -d:zlib -d:release --threads:on --out:{out} {src}"
      }
    ]
  },
  "compile-debug-backend": {
    "desc": "compile debug backend app only",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{srcBackendDir}::app.nim",
          "out": "{debugBinDir}::debug-{appName}-{appVersion}-{appId}"
        },
        "options": "c -d:nimDebugDlOpen --nimblePath:{nimbledepsDir} -d:ssl -d:zlib --threads:on --out:{out} {src}"
      }
    ]
  },
  "debug": {
    "desc": "debug the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "compile-debug-backend {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "nake",
            "options": "compile-debug-frontend {appName}"
          }
        ]
      },
      {
        "action": "copyFile",
        "list": [
          {
            "src": "{srcTemplateDir}",
            "dest": "{debugBinDir}",
            "filter": "(?=.*).+\\.(mustache|html|tpl)$",
            "withStructure": false
          },
          {
            "src": "{configDir}",
            "dest": "{debugBinDir}",
            "filter": ".+$",
            "withStructure": false
          },
          {
            "src": "{wwwDir}",
            "dest": "{debugWwwDir}",
            "filter": ".+$",
            "withStructure": true
          }
        ]
      }
    ]
  },
  "debug-run": {
    "desc": "debug the app then run it.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "debug {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{debugBinDir}::debug-{appName}-{appVersion}-{appId}",
            "onPlatform": {
              "windows": {
                "exe": "{debugBinDir}::debug-{appName}-{appVersion}-{appId}.exe"
              }
            }
          }
        ]
      }
    ]
  },
  "debug-start": {
    "desc": "run debug in other process.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "{debugBinDir}::debug-{appName}-{appVersion}-{appId} &",
        "onPlatform": {
          "windows": {
            "exe": "start {debugBinDir}::debug-{appName}-{appVersion}-{appId}.exe"
          }
        }
      }
    ]
  },
  "debug-stop": {
    "desc": "stop debug in other process.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "killall debug-{appName}-{appVersion}-{appId}",
        "onPlatform": {
          "windows": {
            "exe": "taskkill /IM \"debug-{appName}-{appVersion}-{appId}.exe\" /F"
          }
        }
      }
    ]
  },
  "release": {
    "desc": "release the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "compile-release-backend {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "nake",
            "options": "compile-release-frontend {appName}"
          }
        ]
      },
      {
        "action": "copyFile",
        "list": [
          {
            "src": "{srcTemplateDir}",
            "dest": "{releaseBinDir}",
            "filter": "(?=.*).+\\.(mustache|html|tpl)$",
            "withStructure": false
          },
          {
            "src": "{configDir}",
            "dest": "{releaseBinDir}",
            "filter": ".+$",
            "withStructure": false
          },
          {
            "src": "{wwwDir}",
            "dest": "{releaseWwwDir}",
            "filter": ".+$",
            "withStructure": true
          }
        ]
      }
    ]
  },
  "release-run": {
    "desc": "release the app then run it.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "release {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{releaseBinDir}::release-{appName}-{appVersion}-{appId}",
            "onPlatform": {
              "windows": {
                "exe": "{releaseBinDir}::release-{appName}-{appVersion}-{appId}.exe"
              }
            }
          }
        ]
      }
    ]
  },
  "release-start": {
    "desc": "run release in other process.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "{debugBinDir}::release-{appName}-{appVersion}-{appId} &",
        "onPlatform": {
          "windows": {
            "exe": "start {debugBinDir}::release-{appName}-{appVersion}-{appId}.exe"
          }
        }
      }
    ]
  },
  "release-stop": {
    "desc": "stop release in other process.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "killall release-{appName}-{appVersion}-{appId}",
        "onPlatform": {
          "windows": {
            "exe": "taskkill /IM \"release-{appName}-{appVersion}-{appId}.exe\" /F"
          }
        }
      }
    ]
  },
  "clean": {
    "desc": "clean bin folder..",
    "tasks": [
      {
        "action": "removeDir",
        "list": [
          {
            "name": "{releaseBinDir}"
          },
          {
            "name": "{debugBinDir}"
          }
        ]
      }
    ]
  },
  "watch-debug-run": {
    "desc": "watch changes in debug mode then run.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "debug {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "nake",
            "options": "debug-start {appName}",
            "next": [
              {
                "action": "watch",
                "list": [
                  {
                    "dirs": [
                      "{srcBackendDir}"
                    ],
                    "pattern": "(?=.*).+\\.nim$",
                    "events": [
                      {
                        "action": [
                          "onModified",
                          "onCreated"
                        ],
                        "list": [
                          {
                            "action": "cmd",
                            "exe": "nake",
                            "options": "debug-stop {appName}"
                          },
                          {
                            "action": "cmd",
                            "exe": "nake",
                            "options": "compile-debug-backend {appName}",
                            "next": [
                              {
                                "action": "cmd",
                                "exe": "nake",
                                "options": "debug-run {appName}"
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dirs": [
                      "{srcFrontendDir}"
                    ],
                    "pattern": "(?=.*).+\\.nim$",
                    "events": [
                      {
                        "action": [
                          "onModified",
                          "onCreated"
                        ],
                        "list": [
                          {
                            "action": "cmd",
                            "exe": "nake",
                            "options": "compile-debug-frontend {appName}"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dirs": [
                      "{srcTemplateDir}"
                    ],
                    "pattern": "(?=.*).+\\.(mustache|html|tpl)$",
                    "events": [
                      {
                        "action": [
                          "onModified",
                          "onCreated"
                        ],
                        "list": [
                          {
                            "action": "copyFile",
                            "list": [
                              {
                                "src": "{eventFilePath}",
                                "dest": "{debugBinDir}::{eventFileName}"
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dirs": [
                      "{configDir}"
                    ],
                    "pattern": ".+$",
                    "events": [
                      {
                        "action": [
                          "onModified",
                          "onCreated"
                        ],
                        "list": [
                          {
                            "action": "copyFile",
                            "list": [
                              {
                                "src": "{eventFilePath}",
                                "dest": "{debugBinDir}::{eventFileName}"
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dirs": [
                      "{wwwDir}"
                    ],
                    "pattern": ".+$",
                    "events": [
                      {
                        "action": [
                          "onModified",
                          "onCreated"
                        ],
                        "list": [
                          {
                            "action": "copyFile",
                            "list": [
                              {
                                "src": "{wwwDir}",
                                "dest": "{debugWwwDir}",
                                "filter": ".+$",
                                "withStructure": true
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "watch-release-run": {
    "desc": "watch changes in release mode then run.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "release {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "nake",
            "options": "release-start {appName}",
            "next": [
              {
                "action": "watch",
                "list": [
                  {
                    "dirs": [
                      "{srcBackendDir}"
                    ],
                    "pattern": "(?=.*).+\\.nim$",
                    "events": [
                      {
                        "action": [
                          "onModified",
                          "onCreated"
                        ],
                        "list": [
                          {
                            "action": "cmd",
                            "exe": "nake",
                            "options": "release-stop {appName}"
                          },
                          {
                            "action": "cmd",
                            "exe": "nake",
                            "options": "compile-release-backend {appName}",
                            "next": [
                              {
                                "action": "cmd",
                                "exe": "nake",
                                "options": "release-start {appName}"
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dirs": [
                      "{srcFrontendDir}"
                    ],
                    "pattern": "(?=.*).+\\.nim$",
                    "events": [
                      {
                        "action": [
                          "onModified",
                          "onCreated"
                        ],
                        "list": [
                          {
                            "action": "cmd",
                            "exe": "nake",
                            "options": "compile-release-frontend {appName}"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dirs": [
                      "{srcTemplateDir}"
                    ],
                    "pattern": "(?=.*).+\\.(mustache|html|tpl)$",
                    "events": [
                      {
                        "action": [
                          "onModified",
                          "onCreated"
                        ],
                        "list": [
                          {
                            "action": "copyFile",
                            "list": [
                              {
                                "src": "{eventFilePath}",
                                "dest": "{releaseBinDir}::{eventFileName}"
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dirs": [
                      "{configDir}"
                    ],
                    "pattern": ".+$",
                    "events": [
                      {
                        "action": [
                          "onModified",
                          "onCreated"
                        ],
                        "list": [
                          {
                            "action": "copyFile",
                            "list": [
                              {
                                "src": "{eventFilePath}",
                                "dest": "{releaseBinDir}::{eventFileName}"
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dirs": [
                      "{wwwDir}"
                    ],
                    "pattern": ".+$",
                    "events": [
                      {
                        "action": [
                          "onModified",
                          "onCreated"
                        ],
                        "list": [
                          {
                            "action": "copyFile",
                            "list": [
                              {
                                "src": "{wwwDir}",
                                "dest": "{releaseWwwDir}",
                                "filter": ".+$",
                                "withStructure": true
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
