{
  "appInfo": {
    "appName": "",
    "appType": "web",
    "appDesc": "create web app with zfcore."
  },
  "nimble": [
    "install zip@#head",
    "install uri3@#head",
    "install zfblast@#head",
    "install zfcore@#head",
    "install zfplugs@#head",
    "install stdext@#head",
    "install moustachu@#head",
    "install karax@#head"
  ],
  "initVar": {
    "appDir": "{appsDir}::{appName}",
    "srcDir": "{appDir}::src",
    "srcFrontendDir": "{appDir}::srcDir::frontend",
    "srcbackendDir": "{appDir}::srcDir::backend",
    "wwwDir": "{appDir}::www",
    "compiledJsDir": "{wwwDir}::private::js"
  },
  "init": [
    {
      "action": "copyDir",
      "list": [
        {
          "src": "{templatesDir}::{appType}",
          "dest": "{appDir}",
          "next":[
            {
              "action": "createDir",
              "list": [
                {"name": "{compiledJsDir}"}
              ]
            }
          ]
        }
      ]
    }
  ],
  "compile-debug-frontend": {
    "desc": "compile debug frontend app only.",
    "tasks": [
      {
        "action": "cmd",
        "exe" : "nim",
        "props": {
          "src": "{currentAppDir}::src::frontend::app.nim",
          "out": "{currentAppDir}::www::private::js::app.js"
        },
        "options": "js --out:{out} {src}"
      },
      {
        "action": "copyDir",
        "list": [
          {
            "src": "{currentAppDir}::www::private::js",
            "dest": "{currentAppDir}::bin::debug::www::private::js"
          }
        ]
      }
    ]
  },
  "compile-release-frontend": {
    "desc": "compile release frontend app only.",
    "tasks": [
      {
        "action": "cmd",
        "exe" : "nim",
        "props": {
          "src": "{currentAppDir}::src::frontend::app.nim",
          "out": "{currentAppDir}::www::private::js::app.js"
        },
        "options": "js -d:release --out:{out} {src}"
      },
      {
        "action": "copyDir",
        "list": [
          {
            "src": "{currentAppDir}::www::private::js",
            "dest": "{currentAppDir}::bin::release::www::private::js"
          }
        ]
      }
    ]
  },
  "compile-release-backend": {
    "desc": "compile release backend app only",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{currentAppDir}::src::backend::app.nim",
          "out": "{currentAppDir}::bin::release"
        },
        "options": "c -d:nimDebugDlOpen -d:ssl -d:zlib -d:release --threads:on --outdir:{out} {src}"
      }
    ]
  },
  "compile-debug-backend": {
    "desc": "compile debug backend app only",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{currentAppDir}::src::backend::app.nim",
          "out": "{currentAppDir}::bin::debug"
        },
        "options": "c -d:nimDebugDlOpen -d:ssl -d:zlib --threads:on --outdir:{out} {src}"
      }
    ]
  },
  "debug": {
    "desc": "debug the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "compile-debug-backend {appName}",
        "next": [
          {
            "action": "cmd",
            "exe" : "nake",
            "options": "compile-debug-frontend {appName}",
            "next": [
              {
                "action": "copyDir",
                "list": [
                  {
                    "src": "{currentAppDir}::www",
                    "dest": "{currentAppDir}::bin::debug::www"
                  },
                  {
                    "src": "{currentAppDir}::ssl",
                    "dest": "{currentAppDir}::bin::debug::ssl"
                  }
                ]
              },
              {
                "action": "copyFile",
                "list": [
                  {
                    "src": "{currentAppDir}::settings.json",
                    "dest": "{currentAppDir}::bin::debug::settings.json",
                    "err": []
                  },
                  {
                    "src": "{currentAppDir}::src",
                    "dest": "{currentAppDir}::bin::debug",
                    "filter": "(?=.*).+\\.(tpl|mustache)"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "debug-run": {
    "desc": "debug the app then run it.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "debug {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{currentAppDir}::bin::debug::app {appName}",
            "onPlatform": {
              "windows": {
                "exe": "{currentAppDir}::bin::debug::app.exe {appName}"
              }
            }
          }
        ]
      }
    ]
  },
  "release": {
    "desc": "release the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "compile-release-backend {appName}",
        "next": [
          {
            "action": "cmd",
            "exe" : "nake",
            "options": "compile-release-frontend {appName}",
            "next": [
              {
                "action": "copyDir",
                "list": [
                  {
                    "src": "{currentAppDir}::www",
                    "dest": "{currentAppDir}::bin::release::www"
                  },
                  {
                    "src": "{currentAppDir}::ssl",
                    "dest": "{currentAppDir}::bin::release::ssl"
                  }
                ]
              },
              {
                "action": "copyFile",
                "list": [
                  {
                    "src": "{currentAppDir}::settings.json",
                    "dest": "{currentAppDir}::bin::release::settings.json",
                    "err": []
                  },
                  {
                    "src": "{currentAppDir}::src",
                    "dest": "{currentAppDir}::bin::release",
                    "filter": "(?=.*).+\\.(tpl|mustache)"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "release-run": {
    "desc": "release the app then run it.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "release {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{currentAppDir}::bin::release::app {appName}",
            "onPlatform": {
              "windows": {
                "exe": "{currentAppDir}::bin::debug::app.exe {appName}"
              }
            }
          }
        ]
      }
    ]
  },
  "clean-release-run": {
    "desc": "clean release then run the app.",
    "tasks": [
      {
        "action": "removeDir",
        "list":[
          {
            "name": "{currentAppDir}::bin::release",
            "next": [
              {
                "action": "cmd",
                "exe": "nake",
                "options": "release-run {appName}"
              }
            ]
          }
        ]
      }
    ]
  },
  "clean-debug-run": {
    "desc": "clean debug then run the app.",
    "tasks": [
      {
        "action": "removeDir",
        "list":[
          {
            "name": "{currentAppDir}::bin::debug",
            "next": [
              {
                "action": "cmd",
                "exe": "nake",
                "options": "debug-run {appName}"
              }
            ]
          }
        ]
      }
    ]
  },
  "clean-all": {
    "desc": "clean bin dir.",
    "tasks": [
      {
        "action": "removeDir",
        "list": [
          {"name": "{currentAppDir}::bin"}
        ]
      }
    ]
  },
  "watch-debug-run": {
    "desc": "watch changes in debug mode then run.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "debug {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{currentAppDir}::bin::debug::app {appName} &",
            "onPlatform": {
              "windows": {
                "exe": "start {currentAppDir}::bin::debug::app.exe {appName}"
              }
            },
            "next": [
              {
                "action": "watch",
                "list": [
                  {
                    "dir": "{currentAppDir}::src",
                    "pattern": "^(?!.*_js).+\\.nim",
                    "onModified": [
                      {
                        "action": "cmd",
                        "exe": "killall app {appName}",
                        "onPlatform": {
                          "windows": {
                            "exe": "taskkill /IM \"app.exe {appName}\" /F"
                          }
                        }
                      },
                      {
                        "action": "cmd",
                        "exe": "nake",
                        "options": "compile-debug-backend {appName}",
                        "next": [
                          {
                            "action": "cmd",
                            "exe": "{currentAppDir}::bin::debug::app {appName} &",
                            "onPlatform": {
                              "windows": {
                                "exe": "start {currentAppDir}::bin::debug::app.exe {appName}"
                              }
                            }
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::src",
                    "pattern": "(?=.*_js).+\\.nim",
                    "onModified": [
                      {
                        "action": "cmd",
                        "exe": "nake",
                        "options": "compile-debug-frontend {appName}"
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::src",
                    "pattern": "(?=.*\\.(tpl|mustache)).+$",
                    "onModified": [
                      {
                        "action": "copyFile",
                        "list": [
                          {
                            "src": "{modifiedFilePath}",
                            "dest": "{currentAppDir}::bin::debug::{modifiedFileName}"
                          }
                        ]
                      }
                    ],
                    "onCreated": [
                      {
                        "action": "copyFile",
                        "list": [
                          {
                            "src": "{createdFilePath}",
                            "dest": "{currentAppDir}::bin::debug::{createdFileName}"
                          }
                        ]
                      }
                    ],
                    "onDeleted": [
                      {
                        "action": "removeFile",
                        "list": [
                          {
                            "name": "{currentAppDir}::bin::debug::{deletedFileName}"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::www",
                    "pattern": "[\\w\\W]+$",
                    "onModified": [
                      {
                        "action": "copyDir",
                        "list": [
                          {
                            "src": "{currentAppDir}::www",
                            "dest": "{currentAppDir}::bin::debug::www"
                          }
                        ]
                      }
                    ],
                    "onCreated": [
                      {
                        "action": "copyDir",
                        "list": [
                          {
                            "src": "{currentAppDir}::www",
                            "dest": "{currentAppDir}::bin::debug::www"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::ssl",
                    "pattern": "[\\w\\W]+$",
                    "onModified": [
                      {
                        "action": "copyDir",
                        "list": [
                          {
                            "src": "{currentAppDir}::ssl",
                            "dest": "{currentAppDir}::bin::debug::ssl"
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "watch-release-run": {
    "desc": "watch changes in release mode then run.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "release {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{currentAppDir}::bin::release::app {appName} &",
            "onPlatform": {
              "windows": {
                "exe": "start {currentAppDir}::bin::release::app.exe {appName}"
              }
            },
            "next": [
              {
                "action": "watch",
                "list": [
                  {
                    "dir": "{currentAppDir}::src",
                    "pattern": "^(?!.*_js).+\\.nim",
                    "onModified": [
                      {
                        "action": "cmd",
                        "exe": "killall app {appName}",
                        "onPlatform": {
                          "windows": {
                            "exe": "taskkill /IM \"app.exe {appName}\" /F"
                          }
                        }
                      },
                      {
                        "action": "cmd",
                        "exe": "nake",
                        "options": "compile-release-backend {appName}",
                        "next": [
                          {
                            "action": "cmd",
                            "exe": "{currentAppDir}::bin::release::app {appName} &",
                            "onPlatform": {
                              "windows": {
                                "exe": "start {currentAppDir}::bin::release::app.exe {appName}"
                              }
                            }
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::src",
                    "pattern": "(?=.*_js).+\\.nim",
                    "onModified": [
                      {
                        "action": "cmd",
                        "exe": "nake",
                        "options": "compile-release-frontend {appName}"
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::src",
                    "pattern": "(?=.*\\.(tpl|mustache)).+$",
                    "onModified": [
                      {
                        "action": "copyFile",
                        "list": [
                          {
                            "src": "{modifiedFilePath}",
                            "dest": "{currentAppDir}::bin::release::{modifiedFileName}"
                          }
                        ]
                      }
                    ],
                    "onCreated": [
                      {
                        "action": "copyFile",
                        "list": [
                          {
                            "src": "{createdFilePath}",
                            "dest": "{currentAppDir}::bin::release::{createdFileName}"
                          }
                        ]
                      }
                    ],
                    "onDeleted": [
                      {
                        "action": "removeFile",
                        "list": [
                          {
                            "name": "{currentAppDir}::bin::release::{deletedFileName}"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::www",
                    "pattern": "[\\w\\W]+$",
                    "onModified": [
                      {
                        "action": "copyDir",
                        "list": [
                          {
                            "src": "{currentAppDir}::www",
                            "dest": "{currentAppDir}::bin::release::www"
                          }
                        ]
                      }
                    ],
                    "onCreated": [
                      {
                        "action": "copyDir",
                        "list": [
                          {
                            "src": "{currentAppDir}::www",
                            "dest": "{currentAppDir}::bin::release::www"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::ssl",
                    "pattern": "[\\w\\W]+$",
                    "onModified": [
                      {
                        "action": "copyDir",
                        "list": [
                          {
                            "src": "{currentAppDir}::ssl",
                            "dest": "{currentAppDir}::bin::release::ssl"
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
