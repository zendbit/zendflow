{
  "appInfo": {
    "appName": "",
    "appType": "web",
    "appDesc": "create web app with zfcore."
  },
  "nimble": [
    "install zip@#head",
    "install uri3@#head",
    "install zfblast@#head",
    "install zfcore@#head",
    "install zfplugs@#head",
    "install stdext@#head",
    "install moustachu@#head"
  ],
  "initVar": {
    "appDir": "{appsDir}::{appName}",
    "srcDir": "{appDir}::src",
    "frontendSrcDir": "{srcDir}::frontend",
    "backendSrcDir": "{srcDir}::backend",
    "wwwDir": "{appDir}::www",
    "compiledJsDir": "{wwwDir}::private::js"
  },
  "init": [
    {
      "action": "copyDir",
      "list": [
        {
          "src": "{templatesDir}::{appType}",
          "dest": "{appDir}",
          "next":[
            {
              "action": "copyFile",
              "list": [
                {
                  "src": "nakefile.nim",
                  "dest": "{appDir}::nakefile.nim",
                  "next":[
                    {
                      "action": "moveFile",
                      "list": [
                        {
                          "src": "{frontendSrcDir}::app.nim",
                          "dest": "{frontendSrcDir}::{appName}.nim",
                          "next": [
                            {
                              "action": "createDir",
                              "list": [
                                {"name": "{compiledJsDir}"}
                              ]
                            }
                          ]
                        },
                        {
                          "src": "{backendSrcDir}::app.nim",
                          "dest": "{backendSrcDir}::{appName}.nim",
                          "next": [
                            {
                              "action": "replaceStr",
                              "file": "{backendSrcDir}::layout.nim",
                              "list": [
                                {
                                  "old": "[appName]",
                                  "new": "{appName}"
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "compile-frontend": {
    "desc": "compile frontend app only.",
    "tasks": [
      {
        "action": "cmd",
        "exe" : "nim",
        "props": {
          "src": "{currentAppDir}::src::frontend::{appName}.nim",
          "out": "{currentAppDir}::www::private::js"
        },
        "options": "js --outdir:{out} {src}"
      }
    ]
  },
  "compile-debug-frontend": {
    "desc": "compile debug frontend app only.",
    "tasks": [
      {
        "action": "cmd",
        "exe" : "nake",
        "options": "compile-frontend {appName}",
        "next": [
          {
            "action": "copyDir",
            "list": [
              {
                "src": "{currentAppDir}::www::private::js",
                "dest": "{currentAppDir}::bin::debug::www::private::js"
              }
            ]
          }
        ]
      }
    ]
  },
  "compile-release-frontend": {
    "desc": "compile release frontend app only.",
    "tasks": [
      {
        "action": "cmd",
        "exe" : "nake",
        "options": "compile-frontend {appName}",
        "next": [
          {
            "action": "copyDir",
            "list": [
              {
                "src": "{currentAppDir}::www::private::js",
                "dest": "{currentAppDir}::bin::release::www::private::js"
              }
            ]
          }
        ]
      }
    ]
  },
  "compile-release-backend": {
    "desc": "compile release backend app only",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{currentAppDir}::src::backend::{appName}.nim",
          "out": "{currentAppDir}::bin::release"
        },
        "options": "c -d:nimDebugDlOpen -d:ssl -d:zlib -d:release --threads:on --outdir:{out} {src}"
      }
    ]
  },
  "compile-debug-backend": {
    "desc": "compile debug backend app only",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{currentAppDir}::src::backend::{appName}.nim",
          "out": "{currentAppDir}::bin::debug"
        },
        "options": "c -d:nimDebugDlOpen -d:ssl -d:zlib --threads:on --outdir:{out} {src}"
      }
    ]
  },
  "debug": {
    "desc": "debug the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "compile-debug-backend {appName}",
        "next": [
          {
            "action": "cmd",
            "exe" : "nake",
            "options": "compile-frontend {appName}",
            "next": [
              {
                "action": "copyDir",
                "list": [
                  {
                    "src": "{currentAppDir}::www",
                    "dest": "{currentAppDir}::bin::debug::www"
                  },
                  {
                    "src": "{currentAppDir}::ssl",
                    "dest": "{currentAppDir}::bin::debug::ssl"
                  }
                ]
              },
              {
                "action": "copyFile",
                "list": [
                  {
                    "src": "{currentAppDir}::settings.json",
                    "dest": "{currentAppDir}::bin::debug::settings.json",
                    "err": []
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "debug-run": {
    "desc": "debug the app then run it.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "debug {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{currentAppDir}::bin::debug::{appName}",
            "onPlatform": {
              "windows": {
                "exe": "{currentAppDir}::bin::debug::{appName}.exe"
              }
            }
          }
        ]
      }
    ]
  },
  "release": {
    "desc": "release the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "compile-release-backend {appName}",
        "next": [
          {
            "action": "cmd",
            "exe" : "nake",
            "options": "compile-release-frontend {appName}",
            "next": [
              {
                "action": "copyDir",
                "list": [
                  {
                    "src": "{currentAppDir}::www",
                    "dest": "{currentAppDir}::bin::release::www"
                  },
                  {
                    "src": "{currentAppDir}::ssl",
                    "dest": "{currentAppDir}::bin::release::ssl"
                  }
                ]
              },
              {
                "action": "copyFile",
                "list": [
                  {
                    "src": "{currentAppDir}::settings.json",
                    "dest": "{currentAppDir}::bin::release::settings.json",
                    "err": []
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "release-run": {
    "desc": "release the app then run it.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "release {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{currentAppDir}::bin::release::{appName}",
            "onPlatform": {
              "windows": {
                "exe": "{currentAppDir}::bin::debug::{appName}.exe"
              }
            }
          }
        ]
      }
    ]
  },
  "clean-release-run": {
    "desc": "clean release then run the app.",
    "tasks": [
      {
        "action": "removeDir",
        "list":[
          {
            "name": "{currentAppDir}::bin::release",
            "next": [
              {
                "action": "cmd",
                "exe": "nake",
                "options": "release-run {appName}"
              }
            ]
          }
        ]
      }
    ]
  },
  "clean-debug-run": {
    "desc": "clean debug then run the app.",
    "tasks": [
      {
        "action": "removeDir",
        "list":[
          {
            "name": "{currentAppDir}::bin::debug",
            "next": [
              {
                "action": "cmd",
                "exe": "nake",
                "options": "debug-run {appName}"
              }
            ]
          }
        ]
      }
    ]
  },
  "clean-all": {
    "desc": "clean bin dir.",
    "tasks": [
      {
        "action": "removeDir",
        "list": [
          {"name": "{currentAppDir}::bin"}
        ]
      }
    ]
  },
  "watch-debug-run": {
    "desc": "watch changes in debug mode then run.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "debug {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{currentAppDir}::bin::debug::{appName} &",
            "onPlatform": {
              "windows": {
                "exe": "start {currentAppDir}::bin::debug::{appName}.exe"
              }
            },
            "next": [
              {
                "action": "watch",
                "list": [
                  {
                    "dir": "{currentAppDir}::src::backend",
                    "pattern": "[\\w\\W]*\\.nim",
                    "onModified": [
                      {
                        "action": "cmd",
                        "exe": "killall {appName}",
                        "onPlatform": {
                          "windows": {
                            "exe": "taskkill /IM \"{appName}.exe\" /F"
                          }
                        }
                      },
                      {
                        "action": "cmd",
                        "exe": "nake",
                        "options": "compile-debug-backend {appName}",
                        "next": [
                          {
                            "action": "cmd",
                            "exe": "{currentAppDir}::bin::debug::{appName} &",
                            "onPlatform": {
                              "windows": {
                                "exe": "start {currentAppDir}::bin::debug::{appName}.exe"
                              }
                            }
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::src::frontend",
                    "pattern": "[\\w\\W]*\\.nim",
                    "onModified": [
                      {
                        "action": "cmd",
                        "exe": "nake",
                        "options": "compile-debug-frontend {appName}"
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::www",
                    "pattern": "[\\w\\W]+$",
                    "onModified": [
                      {
                        "action": "copyDir",
                        "list": [
                          {
                            "src": "{currentAppDir}::www",
                            "dest": "{currentAppDir}::bin::debug::www"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::ssl",
                    "pattern": "[\\w\\W]+$",
                    "onModified": [
                      {
                        "action": "copyDir",
                        "list": [
                          {
                            "src": "{currentAppDir}::ssl",
                            "dest": "{currentAppDir}::bin::debug::ssl"
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "watch-release-run": {
    "desc": "watch changes in release mode then run.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "release {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{currentAppDir}::bin::release::{appName} &",
            "onPlatform": {
              "windows": {
                "exe": "start {currentAppDir}::bin::release::{appName}.exe"
              }
            },
            "next": [
              {
                "action": "watch",
                "list": [
                  {
                    "dir": "{currentAppDir}::src::backend",
                    "pattern": "[\\w\\W]*\\.nim",
                    "onModified": [
                      {
                        "action": "cmd",
                        "exe": "killall {appName}",
                        "onPlatform": {
                          "windows": {
                            "exe": "taskkill /IM \"{appName}.exe\" /F"
                          }
                        }
                      },
                      {
                        "action": "cmd",
                        "exe": "nake",
                        "options": "compile-release-backend {appName}",
                        "next": [
                          {
                            "action": "cmd",
                            "exe": "{currentAppDir}::bin::release::{appName} &",
                            "onPlatform": {
                              "windows": {
                                "exe": "start {currentAppDir}::bin::release::{appName}.exe"
                              }
                            }
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::src::frontend",
                    "pattern": "[\\w\\W]*\\.nim",
                    "onModified": [
                      {
                        "action": "cmd",
                        "exe": "nake",
                        "options": "compile-release-frontend {appName}"
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::www",
                    "pattern": "[\\w\\W]+$",
                    "onModified": [
                      {
                        "action": "copyDir",
                        "list": [
                          {
                            "src": "{currentAppDir}::www",
                            "dest": "{currentAppDir}::bin::release::www"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "dir": "{currentAppDir}::ssl",
                    "pattern": "[\\w\\W]+$",
                    "onModified": [
                      {
                        "action": "copyDir",
                        "list": [
                          {
                            "src": "{currentAppDir}::ssl",
                            "dest": "{currentAppDir}::bin::release::ssl"
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
