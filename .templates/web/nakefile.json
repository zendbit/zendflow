                "pattern": "(?=.*).+\\.nim$",
                "events": [
                  {
                    "action": [
                      "onModified",
                      "onCreated"
                    ],
                    "list": [
                      {
                        "action": "cmd",
                        "exe": "nake",
                        "options": "compile-debug-backend {appName}"
