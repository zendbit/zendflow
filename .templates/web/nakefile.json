  "clean": {
    "desc": "clean bin folder..",
    "tasks": [
      {
        "action": "removeDir",
        "list": [
          {
            "name": "{releaseBinDir}"
          },
          {
            "name": "{debugBinDir}"
          }
        ]
      }
    ]
  },
