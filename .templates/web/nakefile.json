                "events": [
                  {
                    "action": [
                      "onModified",
                      "onCreated"
                    ],
                    "list": [
                      {
                        "action": "copyFile",
                        "list": [
                          {
                            "src": "{eventFilePath}",
                            "dest": "{debugTemplateDir}",
                            "filter": ".*$",
                            "recursive": false,
                            "withStructure": true,
                            "structureOffset": "{assetTemplateDir}"
                          }
                        ]
                      }
                    ]
                  }
                ]
              },
              {
                "dirs": [
                  "{srcBackendDir}"
                ],
                "pattern": "(?=.*).+\\.(mustache|html|tpl)$",
                "events": [
                  {
                    "action": [
                      "onModified",
