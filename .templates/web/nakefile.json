{
  "appInfo": {
    "appName": "",
    "appType": "web",
    "appDesc": "create web app with zfcore."
  },
  "nimble": [
    "develop https://github.com/zendbit/nim.uri3",
    "develop https://github.com/zendbit/nim.zfblast",
    "develop https://github.com/zendbit/nim.zfcore",
    "develop https://github.com/zendbit/nim.zfplugs",
    "develop https://github.com/zendbit/nim.stdext",
    "install karax"
  ],
  "initVar": {
    "appDir": "{appsDir}::{appName}",
    "srcServerDir": "{appDir}::src::server",
    "srcSpaDir": "{appDir}::src::spa",
    "wwwDir": "{appDir}::www",
    "compiledJsDir": "{wwwDir}::private::js::compiled"
  },
  "init": [
    {
      "action": "copyDir",
      "list": [
        {
          "src": "{templatesDir}::{appType}",
          "dest": "{appDir}"
        }
      ]
    },
    {
      "action": "copyFile",
      "list": [
        {
          "src": "nakefile.nim",
          "dest": "{appDir}::nakefile.nim"
        }
      ]
    },
    {
      "action": "moveFile",
      "list": [
        {
          "src": "{srcServerDir}::app.nim",
          "dest": "{srcServerDir}::{appName}.nim"
        },
        {
          "src": "{srcSpaDir}::app.nim",
          "dest": "{srcSpaDir}::{appName}.nim"
        }
      ]
    },
    {
      "action": "createDir",
      "list": [
        {"name": "{compiledJsDir}"}
      ]
    },
    {
      "action": "cmd",
      "exe": "karun",
      "props": {
        "src": "{srcSpaDir}::{appName}.nim"
      },
      "options": "{src}"
    },
    {
      "action": "moveFile",
      "list": [
        {
          "src": "{appName}.html",
          "dest": "{wwwDir}::index.html"
        },
        {
          "src": "{appName}.js",
          "dest": "{compiledJsDir}::{appName}.js"
        }
      ]
    },
    {
      "action": "replaceStr",
      "file": "{wwwDir}::index.html",
      "list": [
        {
          "old": "{appName}.js",
          "new": "/private/js/compiled/{appName}.js"
        }
      ]
    }
  ],
  "build": {
    "desc": "build the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{currentAppDir}::src::server::{appName}.nim",
          "out": "{currentAppDir}::bin"
        },
        "options": "c -d:nimDebugDlOpen -d:ssl --threads:on --outdir:{out} {src}",
        "next": [
          {
            "action": "cmd",
            "exe" : "nim",
            "props": {
              "src": "{currentAppDir}::src::spa::{appName}.nim",
              "out": "{currentAppDir}::www::private::js::compiled"
            },
            "options": "js --outdir:{out} {src}",
            "next": [
              {
                "action": "removeDir",
                "list": [
                  {"name": "{currentAppDir}::bin::www"}
                ]
              },
              {
                "action": "copyDir",
                "list": [
                  {
                    "src": "{currentAppDir}::www",
                    "dest": "{currentAppDir}::bin::www"
                  }
                ]
              },
              {
                "action": "copyFile",
                "list": [
                  {
                    "src": "{currentAppDir}::settings.json",
                    "dest": "{currentAppDir}::bin/settings.json"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "build-run": {
    "desc": "build the app then run it.",
    "tasks": [
        {
          "action": "cmd",
          "exe": "nake",
          "options": "build {appName}",
          "next": [
            {
              "action": "cmd",
              "exe": "nake",
              "options": "run {appName}"
            }
          ]
        }
    ]
  },
  "release": {
    "desc": "release the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{currentAppDir}::src::server::{appName}.nim",
          "out": "{currentAppDir}::bin"
        },
        "options": "c -d:nimDebugDlOpen -d:ssl --threads:on -d:release --outdir:{out} {src}",
        "next": [
          {
            "action": "cmd",
            "exe" : "nim",
            "props": {
              "src": "{currentAppDir}::src::spa::{appName}.nim",
              "out": "{currentAppDir}::www::private::js::compiled"
            },
            "options": "js --outdir:{out} {src}",
            "next": [
              {
                "action": "removeDir",
                "list": [
                  {"name": "{currentAppDir}::bin::www"}
                ]
              },
              {
                "action": "copyDir",
                "list": [
                  {
                    "src": "{currentAppDir}::www",
                    "dest": "{currentAppDir}::bin::www"
                  }
                ]
              },
              {
                "action": "copyFile",
                "list": [
                  {
                    "src": "{currentAppDir}::settings.json",
                    "dest": "{currentAppDir}::bin/settings.json"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "release-run": {
    "desc": "release the app then run it.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "options": "release {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "nake",
            "options": "run {appName}"
          }
        ]
      }
    ]
  },
  "run": {
    "desc": "run the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "{currentAppDir}::bin::{appName}"
      }
    ]
  }
}
