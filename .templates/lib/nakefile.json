{
  "appInfo": {
    "appName": "",
    "appType": "lib",
    "appDesc": "create native dynamic lib.",
    "appID": "",
    "appVersion": "0.0.1"
  },
  "nimble": {
    "local": [],
    "global": []
  },
  "initVar": {
    "appDir": "{appsDir}::{appName}",
    "appSrcDir": "{appDir}::src"
  },
  "init": [
    {
      "action": "copyDir",
      "list": [
        {
          "src": "{templatesDir}::{appType}",
          "dest": "{appDir}"
        }
      ]
    },
    {
      "action": "copyFile",
      "list": [
        {
          "src": "nakefile.nim",
          "dest": "{appDir}::nakefile.nim"
        }
      ]
    },
    {
      "action": "moveFile",
      "list": [
        {
          "src": "{appSrcDir}::app.nim",
          "dest": "{appSrcDir}::{appName}.nim"
        }
      ]
    }
  ],
  "var": {
    "srcDir": "{workingDir}::src",
    "binDir": "{workingDir}::bin",
    "debugBinDir": "{binDir}::debug",
    "releaseBinDir": "{binDir}::release",
    "nimbledepsDir": "{workingDir}::packages::nimble::pkgs"
  },
  "debug": {
    "desc": "debug the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{srcDir}::{appName}.nim",
          "out": "{debugBinDir}"
        },
        "options": "c -d:nimDebugDlOpen --nimblePath:{nimbledepsDir} --app:lib --outdir:{out} {src}"
      }
    ]
  },
  "release": {
    "desc": "release the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{workingDir}::src::{appName}.nim",
          "out": "{releaseBinDir}"
        },
        "options": "c -d:release --nimblePath:{nimbledepsDir} --app:lib --outdir:{out} {src}"
      }
    ]
  },
  "watch-debug": {
    "desc": "watch changes in debug mode.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "debug {appName}",
        "next": [
          {
            "action": "watch",
            "list": [
              {
                "dirs": [
                  "{srcDir}"
                ],
                "pattern": "(?=.*).+\\.nim$",
                "events": [
                  {
                    "action": [
                      "onModified",
                      "onCreated"
                    ],
                    "list": [
                      {
                        "action": "cmd",
                        "exe": "nake",
                        "options": "debug {appName}"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "watch-release": {
    "desc": "watch changes in release mode.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "release {appName}",
        "next": [
          {
            "action": "watch",
            "list": [
              {
                "dirs": [
                  "{srcDir}"
                ],
                "pattern": "(?=.*).+\\.nim$",
                "events": [
                  {
                    "action": [
                      "onModified",
                      "onCreated"
                    ],
                    "list": [
                      {
                        "action": "cmd",
                        "exe": "nake",
                        "options": "release {appName}"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
