{
  "appInfo": {
    "appName": "",
    "appType": "console",
    "appDesc": "create console app."
  },
  "nimble": [],
  "initVar": {
    "appDir": "{appsDir}::{appName}",
    "appSrcDir": "{appDir}::src"
  },
  "init": [
    {
      "action": "copyDir",
      "list": [
        {
          "src": "{templatesDir}::{appType}",
          "dest": "{appDir}"
        }
      ]
    },
    {
      "action": "copyFile",
      "list": [
        {
          "src": "nakefile.nim",
          "dest": "{appDir}::nakefile.nim"
        }
      ]
    },
    {
      "action": "moveFile",
      "list": [
        {
          "src": "{appSrcDir}::app.nim",
          "dest": "{appSrcDir}::{appName}.nim"
        }
      ]
    }
  ],
  "debug": {
    "desc": "debug the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{currentAppDir}::src::{appName}.nim",
          "out": "{currentAppDir}",
          "nimblePath": "{currentAppDir}::nimbledeps::pkgs"
        },
        "options": "c -d:nimDebugDlOpen --nimblePath:{nimblePath} --outdir:{out} {src}"
      }
    ]
  },
  "debug-run": {
    "desc": "debug the app, then run it.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "debug {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{currentAppDir}::{appName}"
          }
        ]
      }
    ]
  },
  "release": {
    "desc": "release the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{currentAppDir}::src::{appName}.nim",
          "out": "{currentAppDir}",
          "nimblePath": "{currentAppDir}::nimbledeps::pkgs"
        },
        "options": "c -d:release --nimblePath:{nimblePath} --outdir:{out} {src}"
      }
    ]
  },
  "release-run": {
    "desc": "release the app, then run it.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "release {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{currentAppDir}::{appName}"
          }
        ]
      }
    ]
  },
  "watch-debug-run": {
    "desc": "watch changes in debug mode then run.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "debug {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{currentAppDir}::{appName} &",
            "onPlatform": {
              "windows": {
                "exe": "start {currentAppDir}::{appName}.exe"
              }
            },
            "next": [
              {
                "action": "watch",
                "list": [
                  {
                    "dir": "{currentAppDir}::src",
                    "pattern": "(?=.*\\.nim).+$",
                    "onModified": [
                      {
                        "action": "cmd",
                        "exe": "nake",
                        "options": "debug {appName}",
                        "next": [
                          {
                            "action": "cmd",
                            "exe": "killall {appName}",
                            "onPlatform": {
                              "windows": {
                                "exe": "taskkill /IM \"{appName}.exe\" /F"
                              }
                            },
                            "err": []
                          },
                          {
                            "action": "cmd",
                            "exe": "{currentAppDir}::{appName} &",
                            "onPlatform": {
                              "windows": {
                                "exe": "start {currentAppDir}::{appName}.exe"
                              }
                            }
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "watch-release-run": {
    "desc": "watch changes in release mode then run.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "release {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{currentAppDir}::{appName} &",
            "onPlatform": {
              "windows": {
                "exe": "start {currentAppDir}::{appName}.exe"
              }
            },
            "next": [
              {
                "action": "watch",
                "list": [
                  {
                    "dir": "{currentAppDir}::src",
                    "pattern": "(?=.*\\.nim).+$",
                    "onModified": [
                      {
                        "action": "cmd",
                        "exe": "nake",
                        "options": "release {appName}",
                        "next": [
                          {
                            "action": "cmd",
                            "exe": "killall {appName}",
                            "onPlatform": {
                              "windows": {
                                "exe": "taskkill /IM \"{appName}.exe\" /F"
                              }
                            },
                            "err": []
                          },
                          {
                            "action": "cmd",
                            "exe": "{currentAppDir}::{appName} &",
                            "onPlatform": {
                              "windows": {
                                "exe": "start {currentAppDir}::{appName}.exe"
                              }
                            }
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
