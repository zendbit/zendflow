{
  "appInfo": {
    "appName": "",
    "appType": "console",
    "appDesc": "create console app.",
    "appId": "",
    "appVersion": "0.0.1"
  },
  "nimble": [],
  "initVar": {
    "appDir": "{appsDir}::{appName}",
    "appSrcDir": "{appDir}::src"
  },
  "init": [
    {
      "action": "copyDir",
      "list": [
        {
          "src": "{templatesDir}::{appType}",
          "dest": "{appDir}"
        }
      ]
    },
    {
      "action": "copyFile",
      "list": [
        {
          "src": "nakefile.nim",
          "dest": "{appDir}::nakefile.nim"
        }
      ]
    }
  ],
  "var": {
    "srcDir": "{currentAppDir}::src",
    "binDir": "{currentAppDir}::bin",
    "debugBinDir": "{binDir}::debug",
    "releaseBinDir": "{binDir}::release",
    "nimbledepsDir": "{currentAppDir}::packages::nimble::pkgs"
  },
  "debug": {
    "desc": "debug the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{srcDir}::app.nim",
          "out": "{debugBinDir}::{appName}-{appVersion}-{appId}"
        },
        "options": "c -d:nimDebugDlOpen --nimblePath:{nimbledepsDir} --out:{out} {src}"
      }
    ]
  },
  "debug-run": {
    "desc": "debug the app, then run it.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "debug {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{debugBinDir}::{appName}-{appVersion}-{appId}",
            "onPlatform": {
              "windows": {
                "exe": "start {debugBinDir}::{appName}-{appVersion}-{appId}.exe"
              }
            }
          }
        ]
      }
    ]
  },
  "release": {
    "desc": "release the app.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nim",
        "props": {
          "src": "{srcDir}::app.nim",
          "out": "{releaseBinDir}::{appName}-{appVersion}-{appId}"
        },
        "options": "c -d:release --nimblePath:{nimbledepsDir} --out:{out} {src}"
      }
    ]
  },
  "release-run": {
    "desc": "release the app, then run it.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "release {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{releaseBinDir}::{appName}-{appVersion}-{appId}",
            "onPlatform": {
              "windows": {
                "exe": "start {releaseBinDir}::{appName}-{appVersion}-{appID}.exe"
              }
            }
          }
        ]
      }
    ]
  },
  "watch-debug-run": {
    "desc": "watch changes in debug mode then run.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "debug {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{debugBinDir}::{appName}-{appVersion}-{appId} &",
            "onPlatform": {
              "windows": {
                "exe": "start {debugBinDir}::{appName}-{appVersion}-{appId}.exe"
              }
            },
            "next": [
              {
                "action": "watch",
                "list": [
                  {
                    "dirs": [
                      "{srcDir}"
                    ],
                    "pattern": "(?=.*).+\\.nim$",
                    "events": [
                      {
                        "action": [
                          "onModified",
                          "onCreated"
                        ],
                        "list": [
                          {
                            "action": "cmd",
                            "exe": "killall {appName}-{appVersion}-{appId}",
                            "onPlatform": {
                              "windows": {
                                "exe": "taskkill /IM \"{appName}-{appVersion}-{appId}.exe\" /F"
                              }
                            }
                          },
                          {
                            "action": "cmd",
                            "exe": "nake",
                            "options": "debug {appName}",
                            "next": [
                              {
                                "action": "cmd",
                                "exe": "{debugBinDir}::{appName}-{appVersion}-{appId} &",
                                "onPlatform": {
                                  "windows": {
                                    "exe": "start {debugBinDir}::{appName}-{appVersion}-{appId}.exe"
                                  }
                                }
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "watch-release-run": {
    "desc": "watch changes in release mode then run.",
    "tasks": [
      {
        "action": "cmd",
        "exe": "nake",
        "options": "release {appName}",
        "next": [
          {
            "action": "cmd",
            "exe": "{releaseBinDir}::{appName}-{appVersion}-{appId} &",
            "onPlatform": {
              "windows": {
                "exe": "start {releaseBinDir}::{appName}-{appVersion}-{appId}"
              }
            },
            "next": [
              {
                "action": "watch",
                "list": [
                  {
                    "dirs": [
                      "{srcDir}"
                    ],
                    "pattern": "(?=.*).+\\.nim$",
                    "events": [
                      {
                        "action": [
                          "onModified",
                          "onCreated"
                        ],
                        "list": [
                          {
                            "action": "cmd",
                            "exe": "killall {appName}-{appVersion}-{appId}",
                            "onPlatform": {
                              "windows": {
                                "exe": "taskkill /IM \"{appName}-{appVersion}-{appId}.exe\" /F"
                              }
                            }
                          },
                          {
                            "action": "cmd",
                            "exe": "nake",
                            "options": "release {appName}",
                            "next": [
                              {
                                "action": "cmd",
                                "exe": "{releaseBinDir}::{appName}-{appVersion}-{appId} &",
                                "onPlatform": {
                                  "windows": {
                                    "exe": "start {releaseBinDir}::{appName}-{appVersion}-{appId}.exe"
                                  }
                                }
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
